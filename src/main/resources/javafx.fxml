<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.javafx.controller.StudentController">
    <top>
        <AnchorPane prefHeight="60.0" prefWidth="800.0" style="-fx-background-color: lightgray;">
            <children>
                <TextField layoutX="10.0" layoutY="15.0" prefWidth="200.0" promptText="Search" />
                <Button layoutX="220.0" layoutY="15.0" prefWidth="80.0" text="Search" />
                <Button layoutX="310.0" layoutY="15.0" onAction="#openPopUp" prefWidth="100.0" text="Add Student" />
                <Button layoutX="420.0" layoutY="15.0" onAction="#openCoursePage" prefWidth="100.0" text="Open Course"/>
            </children>
        </AnchorPane>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <TableView fx:id="studentTable">
                    <columns>
                        <TableColumn text="Name" />
                        <TableColumn text="Course" />
                        <TableColumn text="Company" />
                        <TableColumn text="Java Skills" />
                        <TableColumn text="Edit" />
                        <TableColumn text="Delete" />
                    </columns>
                </TableView>
            </content>
        </ScrollPane>
    </center>
</BorderPane>






