<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>


<?import javafx.scene.layout.Region?>
<AnchorPane id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.javafx.controller.CourseController">

    <!-- Header -->
    <HBox layoutX="10.0" layoutY="15.0" spacing="10.0">
        <!-- Search Bar -->
        <TextField promptText="Search..." />

        <!-- Search Button -->
        <Button prefWidth="60.0" text="Search" />

        <!-- Add Course Button -->
        <Button prefWidth="100.0" text="Add Course" />

        <!-- Spacer to push Open Student button to the right -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Open Student Button -->
        <Button onAction="#openStudentPage" prefWidth="100.0" text="Open Student" />
    </HBox>

    <!-- TabPane -->
    <TabPane layoutX="10.0" layoutY="50.0" prefHeight="540.0" prefWidth="780.0">
        <Tab text="Courses" closable="false">
            <!-- Table for Courses -->
            <TableView prefHeight="500.0" prefWidth="760.0">
                <!-- Define columns for Course Name and Class -->
                <columns>
                    <TableColumn text="Course Name" />
                    <TableColumn text="Class" />
                </columns>
            </TableView>
        </Tab>
    </TabPane>
</AnchorPane>




