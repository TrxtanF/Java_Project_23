<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<AnchorPane id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.javafx.controller.CourseController">

    <!-- Open Student Button -->
    <Button layoutX="10.0" layoutY="15.0" onAction="#openStudentPage" prefWidth="100.0" text="Open Student" />

    <!-- Search Bar -->
    <TextField layoutX="10.0" layoutY="50.0" promptText="Search..." />

    <!-- Search Button -->
    <Button layoutX="120.0" layoutY="50.0" prefWidth="60.0" text="Search" />

    <!-- Add Course Button -->
    <Button layoutX="10.0" layoutY="100.0" prefWidth="100.0" text="Add Course" />

    <!-- TabPane -->
    <TabPane layoutX="10.0" layoutY="150.0" prefHeight="400.0" prefWidth="780.0">
        <Tab text="Courses">
            <!-- Table for Courses -->
            <TableView layoutX="10.0" layoutY="10.0" prefHeight="370.0" prefWidth="760.0">
                <!-- Define columns for Course Name and Class -->
                <columns>
                    <TableColumn text="Course Name" />
                    <TableColumn text="Class" />
                </columns>
            </TableView>
        </Tab>
    </TabPane>
</AnchorPane>

